<!DOCTYPE html>
<html>
<head>
	<meta http-equiv="Content-type" content="text/html; charset=utf-8" />
	<script src="https://cdn.bootcss.com/jquery/3.3.1/jquery.min.js"></script>
	<title>七夕主题</title>
	<style type="text/css">
		*{
			padding: 0;
			margin: 0;
		}
		#content{
			width: 100%;
			height: 100%;
			overflow: hidden;
			/*left: 20%;
			top: 20%;*/
			position: absolute;
			border: 1px solid #ccc;
		}
		ul,li{
			list-style-type: none;
		}
		.content_ul{
			position: relative;
		}
		.content_ul > li{
			float: left;
			background: #CAE1FF;
			overflow: hidden;
			position: relative;
			color: red;
		}
		li:nth-child(2){
			background: #9BCD9B;
		}
		li:nth-child(3){
			background: yellow;
		}
		#btn{
			position: absolute;
			bottom: 0;
		}
		.move{
			width: 100px;
			height: 50px;
		}
	</style>
</head>
<body>
	<div id="content">
		<ul class="content_ul">
			<li>画面一</li>
			<li>画面二</li>
			<li>画面三</li>
		</ul>
		<div id="btn">
			<button class="move">移动</button>
		</div>
	</div>
	<script type="text/javascript">
		var num_li = $(".content_ul").find("li");
		// ul下的所有子节点，即一个li的组
		var width_div = $("#content").width(); 
		var height_div = $("#content").height();
		$(".content_ul").css({ 
		// ul的实际宽高
			width : num_li.length * width_div + 'px',
			height : height_div + 'px'
		});
		// 设置每个li的宽高和div一致
		$.each(num_li,function(index){
			var Li = num_li.eq(index);
			Li.css({
				width : width_div + 'px',
				height : height_div + 'px'
			});
		});
		$(".move").click(function(){
			$(".content_ul").css({
				'transition-timing-function':'linear',
				'transition-duration':'5000ms',
				'transform':'translate3d(-' + (width_div * 2) +'px,0px,0px)'
			});
		});
	</script>
</body>
</html>